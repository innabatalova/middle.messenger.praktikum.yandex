<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Регистрация</title>
  <link rel="stylesheet" href="../../../.css/style.css">

</head>

<main>
  <form class="auth-form registry-form">

    <div class="input-wrapper">
      <h1 class="auth-form__title registry-form__title">Регистрация</h1>
      {{> input/input label="Почта" name="email" type="email"}}
      {{> input/input label="Логин" name="login" type="text"}}
      {{> input/input label="Имя" name="first_name" type="text"}}
      {{> input/input label="Фамилия" name="second_name" type="text"}}
      {{> input/input label="Телефон" name="phone" type="tel"}}
      {{> input/input label="Пароль" name="password" type="password"}}
      {{> input/input label="Пароль (ещё раз)" name="repeat_password" type="password"}}
    </div>

    <div class="button-wrapper">
      {{> button/button name="Зарегистрироваться"}}
      {{> link/link href="../errors/error-404.hbs" name="Войти"}}
    </div>

  </form>
</main>