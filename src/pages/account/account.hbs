<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Настройка аккаунта</title>
  <link rel="stylesheet" href="../../../.css/style.css">

</head>

<main>
  <div class="container">
    <div class="back">
      <div class="back__arrow">
        
      </div>
    </div>
    <div class="account">
      <div class="account__avatar" name="avatar">
        <img src="../../../static/image/avatar.svg" alt="user avatar" class="account__avatar__img">
        <span class="account__avatar__name">Иван</span>
        <span class="account__avatar__change">Поменять аватар</span>
      </div>
      <div class="account__input">
        {{> field/field name="email" data="Почта" value="pochta@yandex.ru"}}
        {{> field/field name="login" data="Логин" value="ivanivanov"}}
        {{> field/field name="first_name" data="Имя" value="Иван"}}
        {{> field/field name="second_name" data="Фамилия" value="Иванов"}}
        {{> field/field name="display_name" data="Имя в чате" value="Иван"}}
        {{> field/field name="phone" data="Телефон" value="+7 (909) 967 30 30"}}
      </div>
      {{> link/link href="#" name="Изменить данные" class="account__check"}}
      {{> link/link href="#" name="Изменить пароль" class="account__check"}}
      {{> link/link href="#" name="Выйти" class="account__back"}}
    </div>
  </div>
</main>